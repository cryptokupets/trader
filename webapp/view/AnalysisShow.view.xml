<mvc:View controllerName="ck.trader.controller.AnalysisShow" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:chart="openui5.financial.chart" 
	xmlns="sap.m">
	<Page title="Analysis" 
		enableScrolling="false" 
		showNavButton="true" 
		navButtonPress="onBackPress" 
		showHeader="true">
		<chart:Chart id="candlestick" 
			height="400px" 
			padding="5 20 25 60" 
			start="{chart>/begin}" 
			end="{chart>/end}" 
			period="{/period}">
			<chart:CandlestickChart items="{chart>/candles}">
				<chart:Candle time="{chart>time}" 
					open="{chart>open}" 
					high="{chart>high}" 
					low="{chart>low}" 
					close="{chart>close}"/>
			</chart:CandlestickChart>
		</chart:Chart>
		<chart:Chart id="indicator0" 
			height="200px" 
			padding="5 20 25 60" 
			start="{chart>/begin}" 
			end="{chart>/end}" 
			period="{/period}">
			<chart:LineChart items="{chart>/indicators}">
				<chart:LineChartItem time="{chart>time}" 
					value="{chart>value}"/>
			</chart:LineChart>
		</chart:Chart>
	</Page>
</mvc:View>
