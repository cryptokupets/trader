<mvc:View controllerName="ck.trader.controller.Output" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:chart="openui5.financial.chart" 
	xmlns="sap.m">
	<Page title="Analysis" 
		enableScrolling="false" 
		showNavButton="true" 
		navButtonPress="onBackPress" 
		showHeader="true">
		<chart:Chart id="candlestick" 
			height="400px" 
			padding="5 20 25 60" 
			start="{chart>/begin}" 
			end="{chart>/end}" 
			period="{/period}">
			<chart:CandlestickChart items="{chart>/candles}">
				<chart:Candle time="{chart>time}" 
					open="{chart>open}" 
					high="{chart>high}" 
					low="{chart>low}" 
					close="{chart>close}"/>
			</chart:CandlestickChart>
		</chart:Chart>
		<VBox id="indicators" 
			items="{chart>/indicators}">
			<chart:Chart height="200px" 
				padding="5 20 25 60" 
				start="{chart>/begin}" 
				end="{chart>/end}" 
				period="{/period}" 
				series="{chart>Series}">
				<chart:LineChart items="{chart>Items}">
					<chart:LineChartItem time="{chart>time}" 
						value="{chart>value}"/>
				</chart:LineChart>
			</chart:Chart>
		</VBox>
	</Page>
</mvc:View>
