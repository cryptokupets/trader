<mvc:View controllerName="ck.trader.controller.Session" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:core="sap.ui.core" 
  xmlns:l="sap.ui.layout" 
  xmlns:form="sap.ui.layout.form" 
  xmlns:codeeditor="sap.ui.codeeditor" 
  xmlns="sap.m" 
  xmlns:chart="openui5.fc" 
  xmlns:indicator="openui5.fc.indicator" 
  displayBlock="true">
  <Page enableScrolling="false" 
    showNavButton="true" 
    navButtonPress="onBackPress" 
    showHeader="true">
    <headerContent>
      <Button icon="sap-icon://media-play" 
        text="Run" 
        press="onRunPress"/>
    </headerContent>
    <content>
      <l:ResponsiveSplitter>
        <l:PaneContainer>
          <l:PaneContainer orientation="Vertical">
            <l:SplitPane>
              <form:Form editable="true">
                <form:layout>
                  <form:ResponsiveGridLayout labelSpanXL="2" 
                    labelSpanL="2" 
                    labelSpanM="3" 
                    labelSpanS="6" 
                    adjustLabelSpan="false" 
                    emptySpanXL="0" 
                    emptySpanL="0" 
                    emptySpanM="0" 
                    emptySpanS="0" 
                    columnsXL="12" 
                    columnsL="6" 
                    columnsM="4"/>
                </form:layout>
                <form:formContainers>
                  <form:FormContainer>
                    <form:formElements>
                      <form:FormElement label="Exchange">
                        <Text text="{exchange}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Text>
                      </form:FormElement>
                      <form:FormElement label="Currency">
                        <ComboBox selectedKey="{draft>/currency}" 
                          items="{Exchange/Currencies}" 
                          change="onCurrencyChange">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                          <items>
                            <core:Item text="{key}" 
                              key="{key}"/>
                          </items>
                        </ComboBox>
                      </form:FormElement>
                      <form:FormElement label="Asset">
                        <ComboBox id="asset" 
                          selectedKey="{draft>/asset}" 
                          change="onAssetChange">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </ComboBox>
                      </form:FormElement>
                      <form:FormElement label="Period">
                        <ComboBox selectedKey="{draft>/period}" 
                          items="{Exchange/Periods}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                          <items>
                            <core:Item text="{key}" 
                              key="{key}"/>
                          </items>
                        </ComboBox>
                      </form:FormElement>
                      <form:FormElement label="Start">
                        <DatePicker id="start" 
                          displayFormat="short" 
                          valueFormat="yyyy-MM-dd" 
                          value="{draft>/start}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </DatePicker>
                      </form:FormElement>
                      <form:FormElement label="End">
                        <DatePicker id="end" 
                          displayFormat="short" 
                          valueFormat="yyyy-MM-dd" 
                          value="{draft>/end}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </DatePicker>
                      </form:FormElement>
                      <form:FormElement label="Indicators">
                        <Input value="{draft>/strategyIndicators}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Input>
                      </form:FormElement>
                      <form:FormElement label="Parameters">
                        <Input value="{draft>/strategyParameters}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Input>
                      </form:FormElement>
                      <form:FormElement label="Stop loss enabled">
                        <CheckBox selected="{draft>/stoplossEnabled}"/>
                      </form:FormElement>
                      <form:FormElement label="Stop loss level" 
                        visible="{draft>/stoplossEnabled}">
                        <Input value="{draft>/stopLossLevel}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Input>
                      </form:FormElement>
                      <form:FormElement label="Fee">
                        <Input value="{draft>/fee}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Input>
                      </form:FormElement>
                      <form:FormElement label="Initial Balance">
                        <Text text="{initialBalance}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Text>
                      </form:FormElement>
                      <form:FormElement label="Final Balance">
                        <Text text="{finalBalance}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Text>
                      </form:FormElement>
                      <form:FormElement label="Profit">
                        <Text text="{profit}">
                          <layoutData>
                            <l:GridData span="XL2 L2 M3 S6"/>
                          </layoutData>
                        </Text>
                      </form:FormElement>
                    </form:formElements>
                  </form:FormContainer>
                </form:formContainers>
              </form:Form>
            </l:SplitPane>
            <l:SplitPane>
              <codeeditor:CodeEditor editable="true" 
                value="{draft>/code}" 
                height="100%"/>
            </l:SplitPane>
          </l:PaneContainer>
        </l:PaneContainer>
      </l:ResponsiveSplitter>
    </content>
  </Page>
</mvc:View>
